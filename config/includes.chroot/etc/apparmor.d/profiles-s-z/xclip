# Version of program profiled: 0.13

abi <abi/3.0>,
include <tunables/global>

@{exec_path} = @{bin}/xclip
profile xclip @{exec_path} {
  include <abstractions/base>

  network unix stream,

  @{exec_path} mr,

  owner /tmp/mutt-* rw,
  owner /tmp/xauth_@{rand6} r,

  owner @{HOME}/.Xauthority r,

  deny /dev/tty rw,
}
